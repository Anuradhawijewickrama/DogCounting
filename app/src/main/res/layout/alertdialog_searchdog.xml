<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_searchDogs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="@string/searchDialogBox"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_allDogs"
        style="@style/buttonStyle"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_searchDogs"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:text="@string/allDogs" />

    <Button
        android:id="@+id/button_nearByDogs"
        style="@style/buttonStyle"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_allDogs"
        android:layout_alignBottom="@+id/button_allDogs"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/button_allDogs"
        android:layout_toRightOf="@+id/button_allDogs"
        android:text="@string/nearByDogs" />
</RelativeLayout>